<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-tomorrow.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <nav>
        <h1>
          <a href="/">{{ metadata.title }}</a>
        </h1>
        <ul>
          <li class="nav-item">
            <a href="/">Home</a>
          </li>
          <li class="nav-item">
            <a href="/articles">Articles</a>
          </li>
          <li class="nav-item">
            <a href="/videos">Videos</a>
          </li>

          {# {%- for nav in collections.nav | reverse -%}
            <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}">
              <a href="{{ nav.url }}">{{ nav.data.navtitle }}</a>
            </li>
          {%- endfor -%} #}
        </ul>
      </nav>

    </header>

    <main{% if templateclass %} class="{{ templateClass }}" {% endif %}>
      {{ content | safe }}
    </main>

    <footer>
      <div>
        The content on this site is published under the
        <a href="https://github.com/mikegeyser/self/issues/1">
          Creative Commons CC BY-NC-SA 4.0 license
        </a>.
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>